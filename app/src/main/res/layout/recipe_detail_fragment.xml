<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".RecipeDetailFragment"
>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <ImageView
                android:id="@+id/recipe_detail_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/thumbnail"
                android:contentDescription="Recipe thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/recipe_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="30sp"
                android:text="Recipe Title"
                app:layout_constraintTop_toBottomOf="@id/recipe_detail_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/recipe_detail_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:paddingBottom="0dp"
                android:background="@drawable/rounded_corner"
                android:textSize="18sp"
                android:text="Recipe Ingredients"
                app:layout_constraintTop_toBottomOf="@id/recipe_detail_title"
                app:layout_constraintStart_toStartOf="parent"
            />

            <TextView
                android:id="@+id/recipe_detail_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="16sp"
                android:text="Recipe Instructions"
                app:layout_constraintTop_toBottomOf="@id/recipe_detail_ingredients"
                app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>